#ifndef CWORKTHREAD_H
#define CWORKTHREAD_H
#include "Cjob.h"
#include "CCond.h"

//工作线程
class CWorkThread{
public:
	CWorkThread();
	virtual ~CWorkThread();
	void run();				//运行工作线程	
	void setJob(CJob*job);	//设置任务
	Cjob*getJob();
	// int join();
	unsigned int getThreadID();
protected:
private:
	pthread_t  m_threadID;	//线程程ID
	void * m_jobParams;
	CCond m_cond;
	bool m_isStop;
};

#endif 
